<h2>
  <%= @cocktail.name %>
</h2>

<%= render "doses/form", cocktail: @cocktail, dose: @dose %>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li>
      <%= dose.ingredient.name %> <%= dose.description %>
      <%= link_to "&times;".html_safe, dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>

